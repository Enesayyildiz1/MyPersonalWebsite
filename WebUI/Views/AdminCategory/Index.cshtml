@using Entity.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}







<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Adı</th>
        <th>Güncelle</th>


    </tr>


    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.CategoryName</td>
            <td><a class="btn btn-warning" href="/AdminCategory/Update/@category.Id">Güncelle</a></td>
            
        </tr>
    }

</table> 
<a class="btn btn-success" href="/AdminCategory/Add" >Kategori Güncelle</a>



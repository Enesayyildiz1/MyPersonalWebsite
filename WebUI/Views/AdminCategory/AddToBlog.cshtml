@model Entity.Concrete.BlogCategory
@{
    ViewData["Title"] = "AddToBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="AdminCategory" asp-action="AddToBlog" method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Blog Id</label>
        <input asp-for="BlogId" type="text" class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect2">Kategori Çeşidi</label>
        <select asp-for="CategoryId" multiple class="form-control" id="exampleFormControlSelect2" asp-items="ViewBag.liste">
                     
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Ekle</button>
</form>


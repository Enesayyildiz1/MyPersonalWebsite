@model Entity.Concrete.Blog
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<article class="blog-post px-3 py-5 p-md-5">
    <div class="container">
        <header class="blog-post-header">
            <h2 class="title mb-2">@Model.BlogHead</h2>
            <div class="meta mb-3"><span class="date">@Math.Ceiling(@DateTime.Now.Subtract(@Model.PublishedDate).TotalDays) gün önce</span><span class="time">@Model.ReadTime</span><span class="comment"><a href="#">4 comments</a></span></div>
        </header>

        <div class="blog-post-body">
            <figure class="blog-banner">
                <a><img class="img-fluid" src="@Model.ImagePath" alt="image"></a>
            </figure>
            @Model.BlogBody




          
       

        </div><!--//container-->
    </div>
</article>


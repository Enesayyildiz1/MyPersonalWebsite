@model WebUI.Models.BlogImageInfo

    @{
        ViewData["Title"] = "Add";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <form enctype="multipart/form-data" asp-controller="AdminBlog" asp-action="Add" method="post">

        <div class="form-group">
            <label for="exampleFormControlInput1">Blog Başlığı</label>
            <input asp-for="BlogHead" type="text" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <label for="exampleFormControlFile1">İlk Fotoğrafı Ekle</label>
            <input asp-for="Image" type="file" class="form-control-file">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Blog</label>
            <textarea asp-for="BlogBody" id="summernote"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Okuma Süresi</label>
            <input asp-for="ReadTime" type="text" class="form-control">
        </div>
        <button class="btn btn-success" type="submit"> Kaydet</button>
    </form>



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


    <div id="summernote"></div>
    <script>
        $('#summernote').summernote({
            placeholder: 'Blog girişini buradan yapabilirsiniz',
            tabsize: 2,
            height: 400,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>


